<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 <br>
 <%= f.submit 'Update Book' %>
 <br>
 <br>
 <span><%= link_to "Show", show_book_path(@book.id) %></span>

<% end %>

