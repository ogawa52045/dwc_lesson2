<div>
 <%= flash[:notice] %>
</div>

<h1>New book</h1>
<% if @book.errors.any? %>
<div id="error_explanation">
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
 <ul>
  <% @book.errors.each do |error| %>
   <li><%= error.full_message %></li>
  <% end %>
 </ul>
